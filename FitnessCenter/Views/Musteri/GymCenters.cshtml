@model IEnumerable<FitnessCenter.Models.GymCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="glass-card p-4">
    <h2 class="mb-3">Spor Salonları</h2>

    <div class="row g-3">
        @foreach (var gym in Model)
        {
            <div class="col-md-4">
                <div class="p-3 bg-dark bg-opacity-50 rounded border border-secondary h-100 d-flex flex-column">
                    <h5>@gym.Name</h5>
                    <p class="text-muted small flex-grow-1">
                        @gym.Address
                    </p>

                    <div class="mt-auto">
                        <a asp-controller="Musteri"
                           asp-action="BookAppointment"
                           asp-route-gymCenterId="@gym.Id"
                           class="btn btn-primary btn-sm w-100">
                            Randevu Al 📅
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
