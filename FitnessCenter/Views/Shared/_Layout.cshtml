@using Microsoft.AspNetCore.Identity
@using FitnessCenter.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Center</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #0f172a;
            color: #e5e7eb;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        .navbar {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(10px);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.06em;
        }

        .btn-primary {
            background: linear-gradient(135deg, #22c55e, #16a34a);
            border: none;
        }

            .btn-primary:hover {
                filter: brightness(1.1);
            }

        .btn-outline-light:hover {
            color: #0f172a;
            background-color: #e5e7eb;
        }

        main {
            min-height: 80vh;
        }

        footer {
            border-top: 1px solid rgba(148, 163, 184, 0.35);
        }

        .glass-card {
            background: rgba(15, 23, 42, 0.9);
            border-radius: 1rem;
            border: 1px solid rgba(148, 163, 184, 0.2);
            box-shadow: 0 18px 45px rgba(15, 23, 42, 0.8);
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <span class="text-success">Fit</span> Center
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- SOL MENÜ (müşterinin göreceği kısım) -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Musteri" asp-action="GymCenters">
                            Spor Salonları
                        </a>
                    </li>

                    @* Giriş yapmış kullanıcıya özel menüler *@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Musteri" asp-action="AiRecommendation">
                                Yapay Zekâ Öneri
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Musteri" asp-action="MyAppointments">
                                Randevularım
                            </a>
                        </li>
                    }

                    @* Sadece admin için Admin Paneli linki *@
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                Admin Paneli
                            </a>
                        </li>
                    }
                </ul>

                <!-- SAĞ TARAFTAKİ GİRİŞ / ÜYE OL / ÇIKIŞ ALANI -->
                <ul class="navbar-nav ms-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        
                            var currentUser = await UserManager.GetUserAsync(User);
                            var displayName = currentUser?.FullName ?? User.Identity?.Name;
                        

                        <li class="nav-item me-2 d-flex align-items-center text-light">
                            Merhaba, @displayName
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    Çıkış Yap
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-sm"
                               asp-controller="Account" asp-action="Login">
                                Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm"
                               asp-controller="Account" asp-action="Register">
                                Üye Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ANA İÇERİK -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-center text-muted py-3 mt-4">
        <small>
            © @DateTime.Now.Year Fitness Center — Senin için tasarlanmış spor deneyimi
        </small>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
