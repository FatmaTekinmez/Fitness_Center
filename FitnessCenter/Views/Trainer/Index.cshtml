@model IEnumerable<FitnessCenter.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Listesi";
}

<div class="glass-card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Antrenörler</h2>

        <a asp-action="Create" class="btn btn-primary btn-sm">
            Yeni Antrenör Ekle
        </a>
    </div>

    <table class="table table-dark table-striped align-middle">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Spor Salonu</th>
                <th>Hizmetler</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>

                    <td>
                        @t.GymCenter?.Name
                    </td>

                    <td>
                        @if (t.TrainerServices != null && t.TrainerServices.Any())
                        {
                            @string.Join(", ", t.TrainerServices.Select(ts => ts.Service.Name))
                        }
                        else
                        {
                            <span class="text-muted">Servis yok</span>
                        }
                    </td>

                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@t.Id"
                           class="btn btn-outline-light btn-sm me-2">Düzenle</a>

                        <a asp-action="Delete" asp-route-id="@t.Id"
                           class="btn btn-outline-danger btn-sm">Sil</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
