@model FitnessCenter.Models.GymCenter

@{
    ViewData["Title"] = "Yeni Spor Salonu Ekle";
}

<div class="container mt-4">
    <div class="glass-card p-4">

        <h3 class="mb-4">🏋️ Yeni Spor Salonu Ekle</h3>

        <form asp-action="CreateGymCenter" method="post">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Salon Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Örnek: FitLife Gym" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WorkingHours" class="form-label">Çalışma Saatleri</label>
                <input asp-for="WorkingHours" class="form-control" placeholder="Örnek: 08:00 - 23:00" />
                <span asp-validation-for="WorkingHours" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label">Adres</label>
                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Salonun adresi..."></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="GetAllGymCenters" class="btn btn-outline-light">
                    ← Listeye Dön
                </a>

                <button type="submit" class="btn btn-success">
                    Kaydet
                </button>
            </div>

        </form>
    </div>
</div>
